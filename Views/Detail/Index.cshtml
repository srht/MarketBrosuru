@model BrosurViewModel
  <!-- Product Details Area Start -->
<div class="single-product-area  clearfix">
    <div class="container-fluid">


        <div class="row">
            <div class="col-12">
                <div class="single_product_thumb">
                    <div id="product_details_slider" class="carousel slide">
                        @for (int i = 1; i < Model.ImagePaths?.Length + 1; i++)
                            {
                        <div class="carousel-item @(i==1?"active":"")">
                            <img class="d-block w-100" src="/img/bros-img/@Model.Code/@Model.Contents/@(i+".jpg")" alt="@Model.Campaign">
                        </div>
                            }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="single_product_desc">
                    <!-- Product Meta Data -->
                    <div class="product-meta-data">
                        <div class="line"></div>
                        <p class="product-price">@Model.Brand</p>
                        <a href="#">
                            <h6>@Model.Campaign</h6>
                        </a>
                       <p>@Model.Texts</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product Details Area End -->
<!-- ##### Main Content Wrapper End ##### -->
<script>
    $('#product_details_slider').owlCarousel({
        loop: true,
        margin: 10,
        responsiveClass: true,
        responsive: {
            0: {
                items: 1,
                nav: true
            },
            600: {
                items: 3,
                nav: false
            },
            1000: {
                items: 5,
                nav: true,
                loop: false
            }
        }
    })
</script>